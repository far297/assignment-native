<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9EAF7">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="10dp"
        android:text="EDIT RESULTS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_centerHorizontal="true" />

    <!-- Students Dropdown -->
    <Spinner
        android:id="@+id/spinnerStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp" />

    <!-- Class Dropdown -->
    <Spinner
        android:id="@+id/spinnerClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerStudents"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp" />

    <!-- Subjects Dropdown -->
    <Spinner
        android:id="@+id/spinnerSubjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerClass"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp" />

    <!-- Marks Input -->
    <EditText
        android:id="@+id/editTextMarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerSubjects"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Add Marks"
        android:inputType="number"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background" />

    <!-- Grade Input -->
    <EditText
        android:id="@+id/editTextGrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMarks"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Add Grade"
        android:inputType="text"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextGrade"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <!-- Reset Button -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"
            android:background="#f44336"
            android:textColor="#fff" />

        <!-- Update Button -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            android:background="#4CAF50"
            android:textColor="#fff" />
    </LinearLayout>
</RelativeLayout>
